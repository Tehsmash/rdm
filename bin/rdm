#!/usr/bin/ruby

require 'rdm'

is_test = ARGV.shift

if is_test == "--test"
  require 'gtk2'
  require 'webkit'
elsif not is_test.nil?
  puts "Usage rdm {--test}"
  exit
else
  ENV['XAUTHORITY'] = RDM::XServer.createAuth 
  ENV['DISPLAY'] = RDM::XServer.display
  RDM::XServer.start
end

RDM::Panel.new

RDM::Panel.run
